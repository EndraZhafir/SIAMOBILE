<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="#fff7e0">

    <TextView
        android:id="@+id/tv_row_id"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="1" />

    <TextView
        android:id="@+id/tv_row_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Basis Data" />

    <TextView
        android:id="@+id/tv_row_code"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="SVPL3145" />

    <TextView
        android:id="@+id/tv_row_sks"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="2" />

    <TextView
        android:id="@+id/tv_row_created"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="20 January 2025" />

    <ImageView
        android:id="@+id/btn_edit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_edit"
        android:contentDescription="Edit" />

    <ImageView
        android:id="@+id/btn_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_edit"
        android:contentDescription="Delete" />

</LinearLayout>
