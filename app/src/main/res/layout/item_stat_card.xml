<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="200dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/background_cream"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_subject_gold"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_stat_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textColor="@color/ugn_gold"
            android:fontFamily="@font/urbanistextrabold"
            android:textSize="48sp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_stat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Value) Aktif"
            android:fontFamily="@font/urbanistsemibold"
            android:textColor="@color/ugn_gold"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textStyle="bold"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>